@page
@model Octans.Client.Pages.ImageDetailModel
@{
ViewData["Title"] = "Image Detail";
}

<style>
    .detail-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .image-detail {
        position: relative;
        background: white;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .detail-image {
        width: 100%;
        height: auto;
        max-height: 80vh;
        object-fit: contain;
    }

    .image-info {
        padding: 1.5rem;
        background: white;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background-color: #f3f4f6;
        border-radius: 0.375rem;
        transition: background-color 0.2s;
        margin-bottom: 1rem;
    }

    .back-button:hover {
        background-color: #e5e7eb;
    }
</style>

<div class="detail-container">
    <a href="@Url.Page("ImageGallery")" class="back-button">
        ‚Üê Back to Gallery
    </a>

    <div class="image-detail">
        <img src="@Url.Action("GetFullImage", "ImageHandler", new { path = Model.ImagePath })"
             alt="@Model.FileName"
             class="detail-image" />

        <div class="image-info">
            <h1 class="text-2xl font-bold mb-2">@Model.FileName</h1>
            <p class="text-gray-600">Click image to view full size</p>
        </div>
    </div>
</div>