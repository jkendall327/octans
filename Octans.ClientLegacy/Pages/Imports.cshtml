@page
@model Octans.Client.Pages.Imports
@{
    ViewData["Title"] = "Import Files";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ImportUrls">URLs to Import (one per line)</label>
                <textarea asp-for="ImportUrls" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Files">Select Files to Import</label>
                <input type="file" asp-for="Files" class="form-control" multiple />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Import</button>
        </form>
    </div>
</div>

@if (Model.ImportResults != null)
{
    <div class="mt-4">
        <h3>Import Results</h3>
        <ul>
            @foreach (var result in Model.ImportResults)
            {
                <li>@result</li>
            }
        </ul>
    </div>
}