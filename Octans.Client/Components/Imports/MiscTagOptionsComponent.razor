<div class="misc-tag-options">
    <h3>misc</h3>
    <div class="misc-options-grid">
        @foreach (var option in OptionsData.Options)
        {
            <MiscTagOptionComponent 
                Option="option" 
                OptionChanged="OnOptionChanged" />
        }
    </div>
</div>

@code {
    [Parameter] public EventCallback<MiscTagOptionsData> OptionsChanged { get; set; }

    public MiscTagOptionsData OptionsData { get; set; } = new();

    private async Task OnOptionChanged(MiscTagOption changedOption)
    {
        await OptionsChanged.InvokeAsync(OptionsData);
    }
}

