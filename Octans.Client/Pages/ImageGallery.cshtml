@page
@model Octans.Client.Pages.ImageGalleryModel
@{
ViewData["Title"] = "Image Gallery";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Image Gallery</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var imagePath in Model.ImagePaths)
        {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="@Url.Action("GetImage", "ImageHandler", new { path = imagePath })"
                 alt="Gallery Image"
                 class="w-full h-48 object-cover"
                 loading="lazy" />
        </div>
        }
    </div>
</div>